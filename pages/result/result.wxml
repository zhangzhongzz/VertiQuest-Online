
<view class='content'>
  <view class='center-label' style="flex:4; background-color:white" bindtap="opens" data-item="1" hover-class="click-once-opaque"> 
    <view class='text-label'>{{chooseQuery}}</view>
  </view>
  <view class="sorting-list{{!isstart?' chioce-list-hide':' chioce-list-show'}}">
    <view wx:for="{{slist}}" catchtap="onclicks1" data-index="{{index}}" class="sorting-item" hover-class="click-once" wx:key="userInfoListId" >{{item.name}}</view>
  </view>

  <view class='center-label' style="flex:4; background-color:white"> 
    <picker class='text-label' mode="date" value="{{date}}" start="1900-09-01" end="{{date}}" bindchange="bindDateChange">
       <view class='text-label'>{{chooseDate}}</view>
    </picker>
  </view>

  <view class='center-label' style="flex:3; background-color:white" bindtap="query">
    <view class='text-label'>查询</view>
  </view>

</view>




  







