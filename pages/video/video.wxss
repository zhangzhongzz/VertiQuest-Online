/* pages/video.wxss */
.itemgrid{
  position: relative;
  float: left;
  padding: 10rpx 5rpx;
  width: 50%; 
  box-sizing: border-box;
  border-right: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
}

.itemgrid_active{
  background-color: #ECECEC;
}

.itemgrid_icon{
  display: block;
  width: 80%;
  height: 200rpx;
  margin: 0 auto;
}

.itemgrid_label{
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 28rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}




