
page {
  background:rgb(178, 220, 247);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
 
.sheet {
  background: #fff;
  border-radius: 36rpx;
  margin-top: 160rpx;
  width: 84%;
  height: 900rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.naire {
  height: 700rpx;
}
.question {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-left: 32rpx;
}
.border {
  height: 2rpx;
  width: 90%;
  background-color: #d4d4d4;
  margin: 16rpx auto;
}
.radio-group {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  text-indent: 14rpx;
  margin-top: 40rpx;
}
.radio {
  margin-bottom: 14rpx;
}
.checkbox-group {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  text-indent: 14rpx;
  margin-top: 40rpx;
  margin-right: 20rpx;
}
.checkbox {
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: center;
  margin-bottom: 14rpx;
}
.button-group {
  margin-left: 10rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: auto;
}
.button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #6495ed;
  border-radius: 100rpx;
  font-size: 30rpx;
  line-height: 52rpx;
  height: 90rpx;
  font-weight: bold;
  color: #fff;
}
.button::after {
  border: 0;
}
.id {
  text-align: center;
  font-size: 24rpx;
  color: #c2c2c2;
  margin: auto;
  margin-top: 20rpx;
}
.bright789_view_hide{
 display: none;
}
.bright789_view_show{
 display: block;
}
.tui-slider-head,.tui-slider-box{
 height: 80rpx;
 line-height: 80rpx;
 font-size: 35rpx;
 color: #666;

 justify-content: center;
}
.tui-content{
  display: flex;
  align-items: center;
  justify-content: center;
}
.wsui-btn__hover_btn {
  opacity: 0.9;
  transform: scale(0.95, 0.95);
}
/**换行缩进*/
.text-label{
  text-indent: 0rpx;
  padding-left: 0rpx;
  text-align: left;
  word-break:break-all;
  display: block;
  justify-content: space-between;
}
